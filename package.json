{
  "name": "faw_toast",
  "version": "1.0.0",
  "description": "Toast notification system for Rails",
  "private": true,
  "scripts": {
    "build": "yarn run build:css && yarn run build:js",
    "build:css": "sass app/assets/stylesheets/faw_toast.scss:app/assets/stylesheets/faw_toast.min.css --no-source-map --style=compressed",
    "build:js": "esbuild app/assets/javascripts/faw_toast.js --bundle --minify --outfile=app/assets/javascripts/faw_toast.min.js",
    "watch": "yarn run watch:css && yarn run watch:js",
    "watch:css": "sass app/assets/stylesheets/faw_toast.scss:app/assets/stylesheets/faw_toast.min.css --watch",
    "watch:js": "esbuild app/assets/javascripts/faw_toast.js --bundle --watch --outfile=app/assets/javascripts/faw_toast.min.js"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "sass": "^1.69.0"
  }
}
